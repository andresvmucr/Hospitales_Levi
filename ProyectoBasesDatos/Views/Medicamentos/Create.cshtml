@model ProyectoBasesDatos.Models.Medicamento

@{
    ViewData["Title"] = "Añadir Medicamento";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-3">
            <h1 class="h4 mb-0">
                <i class="fas fa-pills me-2"></i>Añadir Medicamento
            </h1>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Nombre -->
                <div class="mb-4">
                    <label asp-for="Nombre" class="form-label fw-bold">Nombre del Medicamento</label>
                    <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ingresa el nombre del medicamento" required />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                    <div class="invalid-feedback">Por favor, ingresa el nombre del medicamento.</div>
                </div>

                <!-- Descripción -->
                <div class="mb-4">
                    <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Ingresa una descripción del medicamento"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                </div>

                <!-- Cantidad -->
                <div class="mb-4">
                    <label for="Cantidad" class="form-label fw-bold">Cantidad</label>
                    <input name="Cantidad" class="form-control form-control-lg" type="number" min="0" placeholder="Ingresa la cantidad disponible" required />
                    <div class="invalid-feedback">Por favor, ingresa una cantidad válida.</div>
                </div>

                <!-- Precio -->
                <div class="mb-4">
                    <label for="Precio" class="form-label fw-bold">Precio</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input name="Precio" class="form-control form-control-lg" type="number" step="0.01" min="0" placeholder="Ingresa el precio del medicamento" required />
                    </div>
                    <div class="invalid-feedback">Por favor, ingresa un precio válido.</div>
                </div>

                <!-- Botones -->
                <div class="d-grid gap-3 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg d-flex align-items-center">
                        <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg d-flex align-items-center">
                        <i class="fas fa-save me-2"></i> Guardar Medicamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Script para validación del formulario -->
    <script>
        (function () {
            'use strict';

            // Selecciona todos los formularios con la clase 'needs-validation'
            var forms = document.querySelectorAll('.needs-validation');

            // Itera sobre los formularios y previene el envío si no son válidos
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}