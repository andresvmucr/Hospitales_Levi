@model ProyectoBasesDatos.Models.Medicamento

@{
    ViewData["Title"] = "Añadir Medicamento";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">Añadir Medicamento</h1>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Nombre -->
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre del Medicamento</label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor, ingresa el nombre del medicamento.</div>
                </div>

                <!-- Descripción -->
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Cantidad -->
                <div class="mb-3">
                    <label for="Cantidad" class="form-label">Cantidad</label>
                    <input name="Cantidad" class="form-control" type="number" min="0" required />
                    <div class="invalid-feedback">Por favor, ingresa una cantidad válida.</div>
                </div>

                <!-- Precio -->
                <div class="mb-3">
                    <label for="Precio" class="form-label">Precio</label>
                    <input name="Precio" class="form-control" type="number" step="0.01" min="0" required />
                    <div class="invalid-feedback">Por favor, ingresa un precio válido.</div>
                </div>
                
                <!-- Botones -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-arrow-left me-1"></i> Volver a la Lista
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Guardar Medicamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Script para validación del formulario -->
    <script>
        (function () {
            'use strict';

            // Selecciona todos los formularios con la clase 'needs-validation'
            var forms = document.querySelectorAll('.needs-validation');

            // Itera sobre los formularios y previene el envío si no son válidos
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}