@model ProyectoBasesDatos.Models.Medicamento

@{
    ViewData["Title"] = "Detalles del Medicamento";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">Detalles del Medicamento</h1>
        </div>
        <div class="card-body">
            <h5 class="card-title text-primary mb-3">
                <i class="fas fa-pills me-2"></i>Información del Medicamento
            </h5>
            <hr />

            <dl class="row">
                <!-- Nombre -->
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <!-- Descripción -->
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <!-- Precio -->
                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">@Model.IdHospitalMedicamentoNavigation.Precio.ToString("C")</dd>

                <!-- Cantidad Disponible -->
                <dt class="col-sm-3">Cantidad Disponible</dt>
                <dd class="col-sm-9">@Model.IdHospitalMedicamentoNavigation.Cantidad</dd>
            </dl>
        </div>
        <div class="card-footer bg-transparent">
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver a la Lista
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .card-footer {
        border-top: none;
    }

    .btn {
        min-width: 120px;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .card-title i {
        font-size: 1.2em;
    }
</style>

<!-- Font Awesome para íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />