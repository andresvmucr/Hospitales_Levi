@model ProyectoBasesDatos.Models.Medicamento

@{
    ViewData["Title"] = "Detalles del Medicamento";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-4">
            <h1 class="h4 mb-0">
                <i class="fas fa-pills me-2"></i>Detalles del Medicamento
            </h1>
        </div>
        <div class="card-body p-5">
            <h5 class="card-title text-primary mb-4">
                <i class="fas fa-info-circle me-2"></i>Información del Medicamento
            </h5>
            <hr class="mb-4" />

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 fw-bold">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3 fw-bold">Precio</dt>
                <dd class="col-sm-9">@Model.IdHospitalMedicamentoNavigation.Precio.ToString("C")</dd>

                <dt class="col-sm-3 fw-bold">Cantidad Disponible</dt>
                <dd class="col-sm-9">@Model.IdHospitalMedicamentoNavigation.Cantidad</dd>
            </dl>
        </div>
        <div class="card-footer bg-transparent py-3">
            <div class="d-flex justify-content-end gap-3">
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center">
                    <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning d-flex align-items-center">
                    <i class="fas fa-edit me-2"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        border-radius: 15px 15px 0 0;
    }

    .card-footer {
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }

    .btn {
        min-width: 140px;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border-radius: 8px;
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

    .text-primary {
        color: #0d6efd !important;
    }

    .card-title i {
        font-size: 1.2em;
    }

    hr {
        border-top: 2px solid rgba(0, 0, 0, 0.1);
    }
</style>

<!-- Font Awesome para íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />