<header>
    <nav class="navbar navbar-expand-sm navbar-light shadow-sm mb-3" style="background-color: #f8f9fa; padding: 12px 0;">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="AdminHome">
                <i class="fas fa-hospital me-2" style="color: #3f51b5; font-size: 1.5rem;"></i>
                <span style="font-weight: 600; color: #2c3e50;">Gestión de Hospital</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item mx-1">
                        <a class="nav-link d-flex align-items-center" style="color: #1976d2; font-weight: 500; padding: 8px 16px; border-radius: 5px; transition: all 0.3s ease;"
                           onmouseover="this.style.backgroundColor='#e3f2fd'"
                           onmouseout="this.style.backgroundColor='transparent'"
                           asp-controller="Citas" asp-action="Index">
                            <i class="fas fa-calendar-check me-2"></i>Citas
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <!-- Mostrar el nombre del doctor -->
                    <li class="nav-item">
                        <span class="nav-link d-flex align-items-center" style="color: #2c3e50; font-weight: 500; padding: 8px 16px;">
                            <i class="fas fa-user-md me-2"></i>
                            @ViewContext.HttpContext.Session.GetString("Nombre") @ViewContext.HttpContext.Session.GetString("PrimerApellido") @ViewContext.HttpContext.Session.GetString("SegundoApellido")
                        </span>
                    </li>

                    <!-- Botón de Cerrar Sesión -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" style="color: #e53935; font-weight: 500; padding: 8px 16px; border-radius: 5px; transition: all 0.3s ease;"
                           onmouseover="this.style.backgroundColor='#ffebee'"
                           onmouseout="this.style.backgroundColor='transparent'"
                           asp-controller="Auth" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}