@model IEnumerable<ProyectoBasesDatos.Models.Cita>

@{
    ViewData["Title"] = "Citas";
}

<div class="container mt-4">

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <!-- Estado de la cita -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="badge @(item.Estado == "Pendiente" ? "bg-warning" : item.Estado == "Completada" ? "bg-success" : "bg-secondary")">
                                @item.Estado
                            </span>
                        </div>

                        <!-- Información de la cita -->
                        <h5 class="card-title">Cita</h5>
                        <p class="card-text">
                            <strong>Día:</strong> @item.Dia.ToString("dd/MM/yyyy")<br>
                            <strong>Hora:</strong> @item.Hora.ToString(@"hh\:mm")
                        </p>

                        <!-- Información del doctor -->
                        <h6 class="card-subtitle mb-2 text-muted">Doctor</h6>
                        <p class="card-text">
                            @if (item.CedulaDoctorNavigation != null && item.CedulaDoctorNavigation.CorreoNavigation != null)
                            {
                                @($"{item.CedulaDoctorNavigation.CorreoNavigation.Nombre} {item.CedulaDoctorNavigation.CorreoNavigation.PrimerApellido} {item.CedulaDoctorNavigation.CorreoNavigation.SegundoApellido}")
                            }
                            else
                            {
                                <span class="text-muted">No disponible</span>
                            }
                        </p>

                        <!-- Información del paciente -->
                        <h6 class="card-subtitle mb-2 text-muted">Paciente</h6>
                        <p class="card-text">
                            @if (item.CedulaPacienteNavigation != null && item.CedulaPacienteNavigation.CorreoNavigation != null)
                            {
                                @($"{item.CedulaPacienteNavigation.CorreoNavigation.Nombre} {item.CedulaPacienteNavigation.CorreoNavigation.PrimerApellido} {item.CedulaPacienteNavigation.CorreoNavigation.SegundoApellido}")
                            }
                            else
                            {
                                <span class="text-muted">No disponible</span>
                            }
                        </p>

                        <!-- Botones de acción -->
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-controller="Citas" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            @if (item.Estado == "Pendiente")
                            {
                                <a asp-controller="Citas" asp-action="Attend" asp-route-id="@item.Id" class="btn btn-primary">
                                    <i class="fas fa-user-md me-2"></i>Atender
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .card {
            border: none;
            border-radius: 10px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            }

        .badge {
            font-size: 0.9em;
            padding: 0.5em 0.75em;
        }

        .btn-sm {
            margin-right: 5px;
        }
    </style>
}
