@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-4 user-select-none">
    <h1 class="display-4 text-center mb-4" style="color: #3f51b5;">Bienvenido al Sistema Médico</h1>
    <div class="row mt-4">

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0" style="border-radius: 10px; transition: transform 0.3s;">
                <div class="card-body text-center p-4" style="background-color: #fef8f0;">
                    <div class="mb-3" style="font-size: 2.5rem; color: #fb8c00;">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <h5 class="card-title" style="color: #2c3e50; font-weight: 600;">Administradores</h5>
                    <p class="card-text text-muted">Lista de administradores de cada hospital.</p>
                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-primary" style="background-color: #fb8c00; border: none; border-radius: 5px;">
                        <i class="fas fa-arrow-right me-2"></i>Ver más
                    </a>
                </div>
            </div>
        </div>

         <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0" style="border-radius: 10px; transition: transform 0.3s;">
                <div class="card-body text-center p-4" style="background-color: #f0f8f1;">
                    <div class="mb-3" style="font-size: 2.5rem; color: #43a047;">
                        <i class="fas fa-stethoscope"></i>
                    </div>
                    <h5 class="card-title" style="color: #2c3e50; font-weight: 600;">Especialidades</h5>
                    <p class="card-text text-muted">Lista de especialidades ofrecidas.</p>
                    <a asp-controller="Especialidades" asp-action="Index" class="btn btn-primary" style="background-color: #43a047; border: none; border-radius: 5px;">
                        <i class="fas fa-arrow-right me-2"></i>Ver más
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0" style="border-radius: 10px; transition: transform 0.3s;">
                <div class="card-body text-center p-4" style="background-color: #f1f8ff;">
                    <div class="mb-3" style="font-size: 2.5rem; color: #1976d2;">
                        <i class="fas fa-hospital"></i>
                    </div>
                    <h5 class="card-title" style="color: #2c3e50; font-weight: 600;">Hospitales</h5>
                    <p class="card-text text-muted">Gestiona los hospitales</p>
                    <a asp-controller="Hospitales" asp-action="Index" class="btn btn-primary" style="background-color: #1976d2; border: none; border-radius: 5px;">
                        <i class="fas fa-arrow-right me-2"></i>Ver más
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

        .btn:hover {
            opacity: 0.9;
        }
    </style>
}