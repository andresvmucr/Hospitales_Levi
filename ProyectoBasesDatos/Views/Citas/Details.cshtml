@model ProyectoBasesDatos.Models.Cita

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cita</h4>
    <hr />
    <dl class="row">
        <!-- Mostrar el día de la cita -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dia)
        </dd>

        <!-- Mostrar la hora de la cita -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hora)
        </dt>
        <dd class="col-sm-10">
            @Model.Hora.ToString(@"hh\:mm")
        </dd>

        <!-- Mostrar el estado de la cita -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <!-- Mostrar el nombre del doctor -->
        <dt class="col-sm-2">
            Doctor
        </dt>
        <dd class="col-sm-10">
            @Model.CedulaDoctorNavigation?.CorreoNavigation?.Nombre
        </dd>

        <!-- Mostrar la especialidad del doctor -->
        <dt class="col-sm-2">
            Especialidad
        </dt>
        <dd class="col-sm-10">
            @Model.CedulaDoctorNavigation?.IdEspecialidadNavigation?.Nombre
        </dd>

        <!-- Mostrar el nombre del paciente -->
        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @Model.CedulaPacienteNavigation?.CorreoNavigation?.Nombre
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>