    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .card-footer {
        border-top: none;
    }

    .btn {
        min-width: 120px;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .card-title i {
        font-size: 1.2em;
    }
</style>

