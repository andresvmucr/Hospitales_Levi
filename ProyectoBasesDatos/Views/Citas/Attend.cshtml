@model ProyectoBasesDatos.Models.Tratamiento

@{
    ViewData["Title"] = "Atender Cita";
    var idCita = ViewBag.IdCita;
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">Atender Cita</h1>
        </div>
        <div class="card-body">
            <form asp-controller="Tratamientos" asp-action="Create" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" name="IdCita" value="@idCita" />

                <!-- Dropdown de medicamentos cargados desde AJAX -->
                <div class="form-group">
                    <label asp-for="TratamientosMeds" class="control-label">Medicamentos</label>
                    <select id="TratamientosMeds" asp-for="TratamientosMeds" class="form-control">
                        <option value="">-- Cargando medicamentos... --</option>
                    </select>
                    <span asp-validation-for="TratamientosMeds" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Atender</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            let idCita = "@idCita"; // Obtener el ID de la cita desde ViewBag
            let url = `/Citas/Attend/${idCita}/GetMeds`; // Nueva URL con el ID de la cita

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    let select = document.getElementById("TratamientosMeds");
                    select.innerHTML = '<option value="">-- Seleccione un medicamento --</option>';

                    data.forEach(med => {
                        let option = document.createElement("option");
                        option.value = med.id;
                        option.textContent = med.nombre;
                        select.appendChild(option);
                    });
                })
                .catch(error => console.error("Error al cargar los medicamentos:", error));
        });
    </script>
}
