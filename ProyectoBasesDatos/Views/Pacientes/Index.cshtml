@model IEnumerable<ProyectoBasesDatos.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
    var currentFilter = ViewBag.CurrentFilter as string;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Lista de Pacientes</h1>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center">
            <i class="fas fa-plus me-2"></i> Crear Nuevo Paciente
        </a>
    </div>

    <!-- Barra de búsqueda -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" id="searchBox" name="searchString" value="@currentFilter" class="form-control" placeholder="Buscar por nombre o cédula..." />
            <button type="submit" class="btn btn-outline-secondary">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center mt-5">
            <i class="fas fa-user-injured fa-4x text-muted mb-3"></i>
            <h2 class="h4">No hay pacientes disponibles</h2>
            <p class="text-muted">Aún no se han registrado pacientes en el sistema.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4" id="pacienteList">
            @foreach (var paciente in Model)
            {
                <div class="col paciente-card" data-name="@paciente.CorreoNavigation.Nombre.ToLower()" data-cedula="@paciente.Cedula.ToLower()">
                    <div class="card h-100 shadow-sm border-0 d-flex flex-column">
                        <div class="card-body flex-grow-1">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="fas fa-user-injured"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-0">@paciente.CorreoNavigation.Nombre @paciente.CorreoNavigation.PrimerApellido @paciente.CorreoNavigation.SegundoApellido</h5>
                                    <small class="text-muted">Cédula: @paciente.Cedula</small>
                                </div>
                            </div>ca
                            <div class="mb-3">
                                <small class="text-muted">Dirección</small>
                                <p class="mb-2">@paciente.Direccion</p>
                                <small class="text-muted">Género</small>
                                <p class="mb-2">@(paciente.Genero == "F" ? "Femenino" : "Masculino")</p>
                                <small class="text-muted">Fecha de Nacimiento</small>
                                <p class="mb-2">@paciente.FechaNacimiento.ToString("dd/MM/yyyy")</p>
                                <small class="text-muted">Correo</small>
                                <p class="mb-2">@paciente.CorreoNavigation.Correo</p>
                                <small class="text-muted">Teléfono</small>
                                <p class="mb-0">@paciente.CorreoNavigation.Telefono</p>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@paciente.Cedula" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-edit me-1"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@paciente.Cedula" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-info-circle me-1"></i> Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Script para búsqueda en tiempo real -->
<script>
    document.getElementById("searchBox").addEventListener("keyup", function () {
        let searchValue = this.value.toLowerCase();
        let cards = document.querySelectorAll(".paciente-card");

        cards.forEach(card => {
            let name = card.getAttribute("data-name");
            let cedula = card.getAttribute("data-cedula");

            if (name.includes(searchValue) || cedula.includes(searchValue)) {
                card.style.display = "block";
            } else {
                card.style.display = "none";
            }
        });
    });
</script>

<!-- Estilos adicionales -->
<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .card-footer {
        border-top: none;
    }

    .btn-sm {
        margin-right: 5px;
    }
</style>

