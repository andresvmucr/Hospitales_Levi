@model ProyectoBasesDatos.Models.Paciente

@{
    ViewData["Title"] = "Editar Paciente";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">Editar Paciente</h1>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Cédula (solo lectura) -->
                <div class="mb-3">
                    <label asp-for="Cedula" class="form-label">Cédula</label>
                    <input asp-for="Cedula" class="form-control" readonly />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>

                <!-- Nombre -->
                <div class="mb-3">
                    <label for="Nombre" class="form-label">Nombre</label>
                    <input name="Nombre" class="form-control" value="@Model.CorreoNavigation.Nombre" required />
                    <div class="invalid-feedback">Por favor, ingresa el nombre.</div>
                </div>

                <!-- Primer Apellido -->
                <div class="mb-3">
                    <label for="PrimerApellido" class="form-label">Primer Apellido</label>
                    <input name="PrimerApellido" class="form-control" value="@Model.CorreoNavigation.PrimerApellido" required />
                    <div class="invalid-feedback">Por favor, ingresa el primer apellido.</div>
                </div>

                <!-- Segundo Apellido -->
                <div class="mb-3">
                    <label for="SegundoApellido" class="form-label">Segundo Apellido</label>
                    <input name="SegundoApellido" class="form-control" value="@Model.CorreoNavigation.SegundoApellido" />
                </div>

                <!-- Teléfono -->
                <div class="mb-3">
                    <label for="Telefono" class="form-label">Teléfono</label>
                    <input name="Telefono" class="form-control" value="@Model.CorreoNavigation.Telefono" required />
                    <div class="invalid-feedback">Por favor, ingresa el teléfono.</div>
                </div>

                <!-- Dirección -->
                <div class="mb-3">
                    <label asp-for="Direccion" class="form-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" required />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor, ingresa la dirección.</div>
                </div>

                <!-- Género -->
                <div class="mb-3">
                    <label asp-for="Genero" class="form-label">Género</label>
                    <select asp-for="Genero" class="form-control" required>
                        <option value="">Selecciona un género</option>
                        <option value="M">Masculino</option>
                        <option value="F">Femenino</option>
                    </select>
                    <span asp-validation-for="Genero" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor, selecciona un género.</div>
                </div>

                <!-- Fecha de Nacimiento -->
                <div class="mb-3">
                    <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" required />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    <div class="invalid-feedback">Por favor, ingresa la fecha de nacimiento.</div>
                </div>

                <!-- Correo (solo lectura) -->
                <div class="mb-3">
                    <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                    <input asp-for="Correo" class="form-control" readonly />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Volver a la Lista
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Script para validación del formulario -->
    <script>
        (function () {
            'use strict';

            // Selecciona todos los formularios con la clase 'needs-validation'
            var forms = document.querySelectorAll('.needs-validation');

            // Itera sobre los formularios y previene el envío si no son válidos
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}

<!-- Estilos adicionales -->
<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .card-footer {
        border-top: none;
    }

    .btn {
        min-width: 120px;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .card-title i {
        font-size: 1.2em;
    }
</style>

