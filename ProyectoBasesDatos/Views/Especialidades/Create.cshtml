@model ProyectoBasesDatos.Models.Especialidade

@{
    ViewData["Title"] = "Crear Especialidad";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">
                <i class="fas fa-plus-circle me-2"></i>Crear Especialidad
            </h2>
        </div>
        <div class="card-body">
            <!-- Formulario de creación -->
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Campo: ID (generado automáticamente) -->
                <div class="mb-3">
                    <label asp-for="Id" class="form-label">
                        <i class="fas fa-id-card me-1"></i>ID
                    </label>
                    <input asp-for="Id" class="form-control" value="@ViewBag.GeneratedId" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <!-- Campo: Nombre -->
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">
                        <i class="fas fa-tag me-1"></i>Nombre
                    </label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Campo: Descripción -->
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">
                        <i class="fas fa-align-left me-1"></i>Descripción
                    </label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Botones de acción -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Volver a la lista
                    </a>

                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i>Crear Especialidad
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}