@model ProyectoBasesDatos.Models.Especialidade

@{
    ViewData["Title"] = "Detalles de la Especialidad";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-2">Detalles de la Especialidad</h1>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <div class="btn-group">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Volver
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="avatar-container me-4">
                            <div class="avatar bg-primary bg-gradient text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 1.8rem;">
                                @(Model.Nombre?.Substring(0, 1).ToUpper())
                            </div>
                        </div>
                        <div>
                            <h2 class="h3 fw-bold mb-1">@Model.Nombre</h2>
                            <p class="text-muted mb-2">
                                <i class="fas fa-stethoscope me-2"></i>Especialidad Médica
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="info-section mb-4">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>Información General
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-tag text-muted me-3"></i>
                                    <div>
                                        <p class="text-muted mb-0 small">Nombre</p>
                                        <p class="fw-medium mb-0">@Html.DisplayFor(model => model.Nombre)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-align-left text-muted me-3"></i>
                                    <div>
                                        <p class="text-muted mb-0 small">Descripción</p>
                                        <p class="fw-medium mb-0">@Html.DisplayFor(model => model.Descripcion)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white p-4 border-top">
                    <div class="d-flex justify-content-end">
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                                <i class="fas fa-pen me-2"></i>Editar Especialidad
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.3s ease;
    }

    .avatar-container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .avatar {
        background-color: #0d6efd;
        color: white;
        font-weight: bold;
    }
</style>