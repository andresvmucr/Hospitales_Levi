@{
    ViewData["Title"] = "Doctores";
    var doctores = (IEnumerable<dynamic>)ViewBag.Doctores;
    var currentFilter = ViewBag.CurrentFilter as string;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Lista de Doctores</h1>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center">
            <i class="fas fa-plus me-2"></i>
            Crear Nuevo Doctor
        </a>
    </div>

    <!-- Barra de búsqueda -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" id="searchBox" name="searchString" value="@currentFilter" class="form-control" placeholder="Buscar por nombre o especialidad..." />
            <button type="submit" class="btn btn-outline-secondary">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    @if (doctores == null || !doctores.Any())
    {
        <div class="text-center mt-5">
            <i class="fas fa-user-md fa-4x text-muted mb-3"></i>
            <h2 class="h4">No hay doctores disponibles</h2>
            <p class="text-muted">Aún no se han registrado doctores en el sistema.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4" id="doctorList">
            @foreach (var item in doctores)
            {
                <div class="col doctor-card" data-name="@item.NombreCompleto.ToLower()" data-specialty="@item.Especialidad.ToLower()">
                    <div class="card h-100 shadow-sm border-0 d-flex flex-column">
                        <div class="card-body flex-grow-1">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="fas fa-user-md"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-0">@item.NombreCompleto</h5>
                                    <small class="text-muted">@item.Especialidad</small>
                                </div>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Cédula</small>
                                <p class="mb-2">@item.Cedula</p>
                                <small class="text-muted">Correo</small>
                                <p class="mb-2">@item.Correo</p>
                                <small class="text-muted">Teléfono</small>
                                <p class="mb-0">@item.Telefono</p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Horarios</small>
                                <ul class="list-unstyled">
                                    @foreach (var horario in item.Horarios)
                                    {
                                        <li>@horario.Dia: @horario.HoraInicio - @horario.HoraFin</li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Cedula" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-edit me-1"></i>Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Cedula" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-info-circle me-1"></i>Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Script para búsqueda en tiempo real -->
<script>
    document.getElementById("searchBox").addEventListener("keyup", function () {
        let searchValue = this.value.toLowerCase();
        let cards = document.querySelectorAll(".doctor-card");

        cards.forEach(card => {
            let name = card.getAttribute("data-name");
            let specialty = card.getAttribute("data-specialty");

            if (name.includes(searchValue) || specialty.includes(searchValue)) {
                card.style.display = "block";
            } else {
                card.style.display = "none";
            }
        });
    });
</script>