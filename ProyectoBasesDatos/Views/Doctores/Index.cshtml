@{
    ViewData["Title"] = "Doctores";
    var doctores = (IEnumerable<dynamic>)ViewBag.Doctores;
}

<h1>Doctores</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>

@if (doctores == null || !doctores.Any())
{
    <p>No hay doctores disponibles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Cédula</th>
                <th>Nombre Completo</th>
                <th>Especialidad</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Horarios</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in doctores)
            {
                <tr>
                    <td>@item.Cedula</td>
                    <td>@item.NombreCompleto</td>
                    <td>@item.Especialidad</td>
                    <td>@item.Correo</td>
                    <td>@item.Telefono</td>
                    <td>
                        <ul>
                            @foreach (var horario in item.Horarios)
                            {
                                <li>@horario.Dia: @horario.HoraInicio - @horario.HoraFin</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Cedula">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Cedula">Detalles</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
}