@model ProyectoBasesDatos.Models.Doctore

@{
    ViewData["Title"] = "Detalles del Doctor";
}

<h1>Detalles del Doctor</h1>

<div>
    <h4>Información del Doctor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cédula</dt>
        <dd class="col-sm-10">@Model.Cedula</dd>

        <dt class="col-sm-2">Nombre Completo</dt>
        <dd class="col-sm-10">
            @Model.CorreoNavigation.Nombre
            @Model.CorreoNavigation.PrimerApellido
            @Model.CorreoNavigation.SegundoApellido
        </dd>

        <dt class="col-sm-2">Especialidad</dt>
        <dd class="col-sm-10">@Model.IdEspecialidadNavigation.Nombre</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.CorreoNavigation.Correo</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.CorreoNavigation.Telefono</dd>

        <dt class="col-sm-2">Horarios</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var horario in Model.Horarios
                .OrderBy(h => h.Dia == "L" ? 1
                : h.Dia == "M" ? 2
                : h.Dia == "K" ? 3
                : h.Dia == "J" ? 4
                : h.Dia == "V" ? 5
                : h.Dia == "S" ? 6
                : 7)) // Ordena L, M, K, J, V, S, D
                {
                    <li>@horario.Dia: @horario.Horainicio.ToString("HH:mm") - @horario.Horafin.ToString("HH:mm")</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Cedula" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
