@model ProyectoBasesDatos.Models.Doctore

@{
    ViewData["Title"] = "Editar Doctor";
}

<h1>Editar</h1>

<h4>Doctore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" readonly />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdEspecialidad" class="control-label">Especialidad</label>
                @if (ViewBag.NoEspecialidades == true)
                {
                    <!-- Dropdown deshabilitado con mensaje -->
                    <select asp-for="IdEspecialidad" class="form-control" disabled>
                        <option value="">No hay especialidades registradas</option>
                    </select>
                }
                else
                {
                    <!-- Dropdown normal -->
                    <select asp-for="IdEspecialidad" class="form-control" asp-items="ViewBag.Especialidades">
                        <option value="">Seleccione una especialidad</option>
                    </select>
                }
                <span asp-validation-for="IdEspecialidad" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" readonly />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CorreoNavigation.Nombre" class="control-label"></label>
                <input asp-for="CorreoNavigation.Nombre" name="Nombre" class="form-control" />
                <span asp-validation-for="CorreoNavigation.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CorreoNavigation.PrimerApellido" class="control-label"></label>
                <input asp-for="CorreoNavigation.PrimerApellido" name="PrimerApellido" class="form-control" />
                <span asp-validation-for="CorreoNavigation.PrimerApellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CorreoNavigation.SegundoApellido" class="control-label"></label>
                <input asp-for="CorreoNavigation.SegundoApellido" name="SegundoApellido" class="form-control" />
                <span asp-validation-for="CorreoNavigation.SegundoApellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CorreoNavigation.Telefono" class="control-label"></label>
                <input asp-for="CorreoNavigation.Telefono" name="Telefono" class="form-control" />
                <span asp-validation-for="CorreoNavigation.Telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Días</label>
                <div class="d-flex flex-wrap">
                    @{
                        var diasSeleccionados = ViewBag.Dias as List<string> ?? new List<string>();
                    }
                    <div class="form-check mr-3">
                        <input class="form-check-input" type="checkbox" name="Dias" value="L" id="diaL" @(diasSeleccionados.Contains("L") ? "checked" : "")>
                        <label class="form-check-label" for="diaL">Lunes</label>
                    </div>
                    <div class="form-check mr-3">
                        <input class="form-check-input" type="checkbox" name="Dias" value="M" id="diaM" @(diasSeleccionados.Contains("M") ? "checked" : "")>
                        <label class="form-check-label" for="diaM">Martes</label>
                    </div>
                    <div class="form-check mr-3">
                        <input class="form-check-input" type="checkbox" name="Dias" value="K" id="diaK" @(diasSeleccionados.Contains("K") ? "checked" : "")>
                        <label class="form-check-label" for="diaK">Miércoles</label>
                    </div>
                    <div class="form-check mr-3">
                        <input class="form-check-input" type="checkbox" name="Dias" value="J" id="diaJ" @(diasSeleccionados.Contains("J") ? "checked" : "")>
                        <label class="form-check-label" for="diaJ">Jueves</label>
                    </div>
                    <div class="form-check mr-3">
                        <input class="form-check-input" type="checkbox" name="Dias" value="V" id="diaV" @(diasSeleccionados.Contains("V") ? "checked" : "")>
                        <label class="form-check-label" for="diaV">Viernes</label>
                    </div>
                    <div class="form-check mr-3">
                        <input class="form-check-input" type="checkbox" name="Dias" value="S" id="diaS" @(diasSeleccionados.Contains("S") ? "checked" : "")>
                        <label class="form-check-label" for="diaS">Sábado</label>
                    </div>
                    <div class="form-check mr-3">
                        <input class="form-check-input" type="checkbox" name="Dias" value="D" id="diaD" @(diasSeleccionados.Contains("D") ? "checked" : "")>
                        <label class="form-check-label" for="diaD">Domingo</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Hora de inicio</label>
                <input type="time" name="HoraInicio" class="form-control" value="@ViewBag.HoraInicio" />
            </div>

            <div class="form-group">
                <label class="control-label">Hora de fin</label>
                <input type="time" name="HoraFin" class="form-control" value="@ViewBag.HoraFin" />
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}