@model ProyectoBasesDatos.Models.Usuario
@{
    ViewData["Title"] = "Detalles del Administrador";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">
                <i class="fas fa-user-circle me-2"></i>Detalles del Administrador
            </h2>
        </div>
        <div class="card-body">
           
            <!-- Lista de detalles -->
            <dl class="row">
                <!-- Nombre completo -->
                <dt class="col-sm-3">
                    <i class="fas fa-user me-1"></i>Nombre Completo
                </dt>
                <dd class="col-sm-9">
                    @Model.Nombre @Model.PrimerApellido @Model.SegundoApellido
                </dd>

                <!-- Teléfono -->
                <dt class="col-sm-3">
                    <i class="fas fa-phone me-1"></i>Teléfono
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>

                <!-- Hospital -->
                <dt class="col-sm-3">
                    <i class="fas fa-hospital me-1"></i>Hospital
                </dt>
                <dd class="col-sm-9">
                    @Model.IdHospitalNavigation?.Nombre
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver a la lista
                </a>

                <a asp-action="Edit" asp-route-id="@Model?.Correo" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i>Editar

                </a>
            </div>
        </div>
    </div>
</div>