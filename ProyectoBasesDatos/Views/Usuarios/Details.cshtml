@model ProyectoBasesDatos.Models.Usuario
@{
    ViewData["Title"] = "Detalles del Administrador";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-2">Detalles del Administrador</h1>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <div class="btn-group">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Volver
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="avatar-container me-4">
                            <div class="avatar bg-primary bg-gradient text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 1.8rem;">
                                @(Model.Nombre?.Substring(0, 1).ToUpper())@(Model.PrimerApellido?.Substring(0, 1).ToUpper())
                            </div>
                        </div>
                        <div>
                            <h2 class="h3 fw-bold mb-1">@Model.Nombre @Model.PrimerApellido @Model.SegundoApellido</h2>
                            <p class="text-muted mb-2">
                                <i class="fas fa-envelope me-2"></i>@Model.Correo
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="info-section mb-4">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="fas fa-id-card text-primary me-2"></i>Información Personal
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user text-muted me-3"></i>
                                    <div>
                                        <p class="text-muted mb-0 small">Nombre Completo</p>
                                        <p class="fw-medium mb-0">@Model.Nombre @Model.PrimerApellido @Model.SegundoApellido</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-phone-alt text-muted me-3"></i>
                                    <div>
                                        <p class="text-muted mb-0 small">Teléfono</p>
                                        <p class="fw-medium mb-0">@Html.DisplayFor(model => model.Telefono)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="info-section mb-4">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="fas fa-hospital-alt text-primary me-2"></i>Información de Asignación
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-building text-muted me-3"></i>
                                    <div>
                                        <p class="text-muted mb-0 small">Hospital Asignado</p>
                                        <p class="fw-medium mb-0">@Model.IdHospitalNavigation?.Nombre</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-map-marker-alt text-muted me-3"></i>
                                    <div>
                                        <p class="text-muted mb-0 small">Ubicación</p>
                                        <p class="fw-medium mb-0">@(Model.IdHospitalNavigation?.Direccion ?? "No especificada")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white p-4 border-top">
                    <div class="d-flex justify-content-end">
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model?.Correo" class="btn btn-primary">
                                <i class="fas fa-pen me-2"></i>Editar Información
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos para la transición de la tarjeta */
    .card {
        transition: all 0.3s ease;
    }
</style>